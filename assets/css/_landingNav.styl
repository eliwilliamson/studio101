.landingNav
  padding-left 15px
  padding-right 15px
  .col-sm-3
    text-align center
    margin-bottom 0
    margin-top 0
    display inline-block
    @media (max-width: 992px) and (min-width: 480px)
      width 32%
      padding 0 1%
    @media (max-width: 480px)
      margin-bottom 60px
    p
      margin 0 10px
  .img-circle
    width 90%
    height auto
    box-shadow 0 -1px 0px rgba(0,0,0,0.5)
    @media (max-width: 992px) and (min-width: 480px)
      width 70%
  h2
    font-weight normal
    margin 0.85em 0 0.5em 0
  .btn-arrow
    margin 1.5em 0
  @media (max-width: 992px) and (min-width: 480px)
    .get-in-touch
      display none
