.landingHero
  .carousel
    height 500px
    margin-bottom 60px
    .item
      height 500px
      background-color #777

  .carousel-caption
    z-index 10
    p
      margin-bottom 20px
      font-size 21px
      line-height 1.4

  .carousel-inner
    & > .item
      & > img
        position absolute
        top 0
        left 0
        min-width 100%
        height 500px
