// -------------------------------------------------------
// Roots global settings variables
// -------------------------------------------------------

// font options (add your own!)
open-sans = 'Open Sans', HelveticaNeue, Helvetica, Arial, sans-serif
great-vibes = 'Great Vibes', cursive

// font stack
body
  font-family: open-sans
.decorative
  font-family: great-vibes

// colors
red = #B44326
orange = #F2A34F
yellow = #F8CA5C
green = #7FC028
light-blue = #52D7FE
blue = #00a6fc
purple = #8E48C2
white = #fff
black = #272727

// default color
default-color = blue

// text hilight color
highlight-color = blue

// vendor prefixes
vendors = webkit moz o ms official

// custom image base path for roots mixins
img-path = ''
