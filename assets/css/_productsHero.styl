.productsHero
  ol
    list-style none
    @media (max-width: 480px)
      margin 0
      overflow hidden
      -webkit-margin-before 0
      -webkit-margin-after 0
      -webkit-padding-start 0
      box-sizing border-box
      padding 40px 20px
  .toggle
    @media (max-width: 480px)
      display none  
  #myCarousel
    @media (max-width: 480px)
      margin-top 70px
  .item
    height 575px
    background-position top center
    background-size cover
    background-repeat no-repeat
    @media (max-width: 480px)
      display none
    &.shu
      background-image url('../img/products/shu-hero.jpg')
      background-position top right
      background-color black
      @media (max-width: 992px)
        background-position top center
      @media (max-width: 710px)
        background-position left center
        text-align center
        p
          text-align center
        img
          width 100%
          margin auto
          max-width 498px
      img
        max-width 450px
        height auto
      .carousel-caption
        @media (min-width: 1200px)
          padding-left 100px
    &.loreal
      background-image url('../img/products/loreal-hero.jpg')
      .carousel-caption p
        text-align left
      @media (max-width: 768px)
        background-position top left
        background-size 450%
        text-align center
        .carousel-caption, .carousel-caption p
          text-align center
          margin 20px auto
          img
            width 100%
            margin auto
            max-width 350px
  .carousel-caption
    position static
    padding-top 180px
    text-align left
    @media (min-width: 1200px)
      padding-left 100px
    @media (max-width: 710px)      
      width 100%
      padding-left 20%
      padding-right 20%
    @media (max-width: 480px)
      padding-top 155px
    p
      margin 20px 0
      font-size 16px
      line-height 1.4
      max-width 450px
      text-shadow 0 1px 3px black
      font-weight 600
      line-height 25px
      text-align right
  .carousel-indicators
    position static
    margin 160px 0 0 0
    left 0
    width 100%
    min-height 1000px
    li
      height 100%
      width 100%
      margin 0
      text-indent 0
      border none
      border-radius 0px
      padding 0
      margin 0
      background-color white
      float left
      .toggle
        position absolute
        top 575px
        z-index 10
        height 60px
        width 50%
        float left
        transition background-color 200ms linear
        &.shu
          background-color #989a9a
        &.loreal
          background-color #fae2ac
          right 0
      .product-list
        opacity 0
        height 0
        display block
        transition opacity 500ms ease-in, height 500ms ease-in
      .logo 
        height 40px
        width auto
        margin-top 10px
        @media (max-width: 768px)
          height 30px
          margin-top 15px
      &.active
        .toggle, .product-list
          opacity 1
          &.shu
            background-color #313535
          &.loreal
            background-color #F3C45F
  .product-list
    .row
      margin-bottom 100px
      .col-sm-3
        text-align center
        margin-bottom 0
        margin-top 0
        display inline-block
        @media (max-width: 990px)
          width 270px
          margin-left 12%
        @media (max-width: 768px)
          width auto
          margin-left auto
        p
          margin 0 10px
      .img-circle
        width 90%
        height auto
        box-shadow 0 -1px 0px rgba(0,0,0,0.5)
      .col-sm-5
        text-align left
        @media (max-width: 768px)
          text-align center
        h2
          font-weight normal
          margin 2.5em 0 0.5em 0
          @media (max-width: 1200px)
            margin-top 1.2em
