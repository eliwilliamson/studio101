.map-wrapper
  width 100%
  overflow hidden
  .directions
    position absolute
    width 100%
    height 450px
    z-index 9
  .row
    position absolute
    z-index 1
    width 100%
    height 450px
    .pin
      position relative
      width 100%
      height 450px
      p
        position absolute
        margin auto
        top 0
        right 0
        bottom 0
        left 0
        color white
        background transparent url('../../img/contact/pin.svg') no-repeat 100px center
        height 140px
        padding 3% 0 8% 120px
        background-size contain
        vertical-align middle
        width 250px
        span
          position relative
          left 100px
          @media (max-width: 480px)
            display none
  #map
    width 120%
    margin 0 -10%
    height 450px
