.aboutHero
  .carousel
    height 621px
    overflow hidden
  .carousel-inner
    height 100%
  .item
    height 520px
    overflow hidden
    background-position bottom left
    background-repeat no-repeat
    img
      height 400px
      width auto
  .carousel-caption
    z-index 9
    background linear-gradient(bottom, rgba(0,0,0,0.1),rgba(0,0,0,0.1),rgba(0,0,0,0.1),rgba(0,0,0,0))
    width 100%
    left 0
    top 80px
    @media (max-width: 992px)
      .col-md-4, .col-md-8
        display inline-block
        vertical-align top
      .col-md-4
        width 33%
      .col-md-8
        width 66%
    @media (max-width: 768px)
      .col-md-4, .col-md-8
        display block
      .col-md-4
        width 100%
      .col-md-8
        width 80%
        margin 0 10%
      .col-md-4
        position absolute
        opacity 0.1
    h1 
      color orange
      font-size 40px
      text-shadow none
      margin 1.4em 0 -20px 0
      text-align left
      span
        display block
        font-family open-sans
        letter-spacing 3px
        font-size 10px
        font-weight 800
        text-transform uppercase
        color dark-grey
        padding 10px 0
        border-top 1px solid lighten(dark-grey, 55)
      @media (max-width: 768px)
        font-size 3.5em
        margin 1.3em 0 -0.2em 0
    p
      margin 40px 0 20px 0
      color dark-grey
      font-size 16px
      line-height 1.4
      text-shadow none
      text-align left
      max-width 450px
      font-weight 400
      line-height 25px
      @media (max-width: 768px)
        font-size 14px
  .talent-thumbnails
    position absolute
    top 543px
    width 100%
    h1 
      font-size 45px
      max-width 33%
      margin-top -100px
      color lighten(dark-grey, 60)
      @media (max-width: 1200px)
        font-size 40px
      @media (max-width: 992px)
        font-size 35px
      @media (max-width: 790px)
        display none
    .container
      height 100px
      @media (max-width: 992px)
        width 100%
      @media (max-width: 790px)
        margin-left -2%
    .carousel-indicators
      bottom 20px
      width 100%
      margin 0
      position static
      height 100px
      li
        background-color transparent
        width 10%
        margin -23px -2% 0 -2%
        padding 0
        text-indent 0
        border none
        overflow hidden
        height 100%
        border-radius 0
        opacity 0.8
        @media (max-width: 790px)
          margin 0
          overflow visible
        &:hover
          opacity 1
          z-index 999
      &:first-child
        margin-left 33%
        @media (max-width: 992px)
          margin-left 15%
        @media (max-width: 790px)
          margin-left 0
      img
        width 100%
        height auto
        @media (max-width: 790px)
          height 100px
          width auto
  hr
    border 0
    height 1px
    margin-top -1px
    background-image: linear-gradient(left, rgba(0,0,0,0), rgba(0,0,0,0.1), rgba(0,0,0,0));
