.btn
  transition all 200ms linear
.btn-primary
  text-decoration none
  background orange
  font-size 14px
  font-weight 700
  text-shadow none
  text-transform uppercase
  border none
  border-radius 3px
  padding 15px 40px
  &:hover
    background lighten(orange, 5)
  &:active
    background darken(orange, 10)
.btn-default
  color white
  text-decoration none
  background orange
  font-size 14px
  font-weight 700
  text-shadow none
  text-transform uppercase
  border none
  border-radius 3px
  padding 10px 16px
  &:hover
    color white
    background lighten(orange, 5)
  &:active
    color white
    background darken(orange, 10)
.btn-arrow
  color orange
  font-weight 600
  border 1px solid transparent
  border-radius 3px
  padding 10px 16px
  text-transform capitalize
  &:after
    content ' â†’'
  &:hover
    border 1px solid orange
    color darken(orange, 10)
  &:active
    border 1px solid orange
    color darken(orange, 10)
  @media (max-width: 480px)
    border 1px solid orange
    color darken(orange, 10)
    
